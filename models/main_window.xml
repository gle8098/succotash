<View layout="LinearLayout" layout:orientation="vertical">
    <!-- Menubar -->
    <Sprite layout="LinearLayout" layout:orientation="horizontal" parent:weight="1" texture="media/textures/menubar/menubar.png">
        <Button name="File" color="0xFFFDD0FF" id ="1" texture="media/textures/button1.png" criticalWidth="50" criticalHeight="20"/>
        <Button name="Edit" color="0xFFFDD0FF" id ="2" texture="media/textures/button1.png" criticalWidth="50" criticalHeight="20"/>
        <Button name="Help" color="0xFFFDD0FF" id ="3" texture="media/textures/button1.png" criticalWidth="50" criticalHeight="20"/>
        <!-- Layout empty -->
        <View parent:weight="20"/>
    </Sprite>

    <!-- Horizontal layout which places left & right panels and main image -->
    <View layout="LinearLayout" layout:orientation="horizontal" parent:weight="30">
        <!-- Left panel -->
        <Sprite layout="LinearLayout" layout:orientation="vertical" texture="media/textures/side_panels/left_panel.png">
            <View parent:weight="0.3"/>

            <Pane>
                <Tab name="Basic instruments" color="0xFFFDD0FF" layout="LinearLayout" layout:orientation="vertical"
                    texture="media/textures/side_panels/Basic_instruments.jpeg" criticalWidth="200">
                    <Button name="Brush"   color="0xfffda0ff" id="4" texture="media/textures/side_panels/Brush.jpeg"   criticalWidth="50" criticalHeight="20"/>
                    <Button name="Pencil"  color="0xfffda0ff" id="5" texture="media/textures/side_panels/Pencil.jpeg"  criticalWidth="50" criticalHeight="20"/>
                    <Button name="Pipette" color="0xfffda0ff" id="6" texture="media/textures/side_panels/Pipette.jpeg" criticalWidth="50" criticalHeight="20"/>
                </Tab>
            </Pane>

            <View parent:weight="0.3"/>

            <Pane headWeight="1">
                <Tab name="Move instruments" color="0xFFFDD0FF" layout="LinearLayout" layout:orientation="horizontal"
                    texture="media/textures/side_panels/Move_instruments.jpeg">
                    <Button name="Move"   color="0xfffda0ff" id="6" texture="media/textures/side_panels/Move.jpeg"/>
                    <Button name="Select" color="0xfffda0ff" id="7" texture="media/textures/side_panels/Select.jpeg"/>
                    <Button name="Cut"    color="0xfffda0ff" id="8" texture="media/textures/side_panels/Cut.jpeg"/>
                </Tab>
            </Pane>

            <View parent:weight="0.3"/>

            <Pane>
                <Tab name="Share" color="0xFFFDD0FF" layout="LinearLayout" layout:orientation="vertical"
                    texture="media/textures/side_panels/Share.jpeg">
                    <Button name="VK"       color="0xfffda0ff" id="10" />
                    <Button name="Facebook" color="0xfffda0ff" id="11" />
                    <Button name="Inst"     color="0xfffda0ff" id="12" />
                </Tab>
            </Pane>

            <View parent:weight="0.3"/>

            <Pane>
                <Tab name="Histogram" color="0xFFFDD0FF" layout="LinearLayout" layout:orientation="vertical" >
                    <Button name="Image here" color="0xF0E68Cff" id="13" parent:weight="3"/>
                    <Button name="" />
                </Tab>
            </Pane>
        </Sprite>

        <!-- Main image -->

        <Sprite name="Image" parent:weight="3" color="0xF0E68Cff" texture="media/textures/image.png">
        </Sprite>

        <!-- Right panel -->
        <Sprite layout="LinearLayout" layout:orientation="vertical" texture="media/textures/side_panels/right_panel.png">
            <View parent:weight="0.3"/>

            <Pane headWeight="1" parent:weight="0.5">
                <Tab name="Some pane" color="0xFFFDD0FF" layout="LinearLayout" layout:orientation="horizontal">
                    <Button name="but1" color="0xfffda0ff" id="13" />
                    <Button name="but2" color="0xfffda0ff" id="14" />
                    <Button name="but3" color="0xfffda0ff" id="15" />
                </Tab>
            </Pane>

            <View parent:weight="0.3"/>

            <Pane>
                <Tab name="History" color="0xFFFDD0FF" layout="LinearLayout" layout:orientation="vertical">
                    <Button name="move rect" color="0xfffda0ff" id="16" />
                    <Button name="brush"     color="0xfffda0ff" id="17" />
                    <Button name="brush"     color="0xfffda0ff" id="18" />
                    <Button name="open file" color="0xfffda0ff" id="19" />
                </Tab>

                <Tab name="Colors" color="0xFFFDD0FF" layout="LinearLayout" layout:orientation="vertical">
                    <Button name="Red"   color="0xff0000df" id="20" />
                    <Button name="Green" color="0x00ff00df" id="21" />
                    <Button name="Blue"  color="0x0000ffdf" id="22" />
                </Tab>
            </Pane>

            <View parent:weight="0.3"/>
        </Sprite>

    </View>
</View>
