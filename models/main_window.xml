<View layout="LinearLayout" layout:orientation="vertical">
    <!-- Menubar -->
    <Sprite layout="LinearLayout" layout:orientation="horizontal" parent:weight="1" color="0xff000000">
        <Button id="1" texture="media/textures/File.png" criticalWidth="50" criticalHeight="20"/>
        <Button id="2" texture="media/textures/Edit.png" criticalWidth="50" criticalHeight="20"/>
        <Button id="3" texture="media/textures/Help.png" criticalWidth="50" criticalHeight="20"/>
        <!-- Layout empty -->
        <View parent:weight="20"/>
    </Sprite>

    <!-- Horizontal layout which places left & right panels and main image -->
    <View layout="LinearLayout" layout:orientation="horizontal" parent:weight="30">
        <!-- Left panel -->
        <Sprite layout="LinearLayout" layout:orientation="vertical" texture="media/textures/left_pane.png" criticalWidth="250">
            <View parent:weight="0.3"/>

            <Pane headWeight="1.2" parent:weight="0.410">
                <Tab texture="media/textures/Basic_instruments.png">
